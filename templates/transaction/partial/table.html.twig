<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Value</th>
            <th>Books</th>
            <th>Transcription</th>
            <th>Description</th>

        </tr>
    </thead>
    <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>
                    <a href="{{ path('transaction_show', { 'id': transaction.id }) }}">
                        {{ transaction }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('transaction_show', { 'id': transaction.id }) }}">
                        {% include 'partial/short-date.html.twig' with {'entity': transaction} %}
                    </a>
                </td>
                <td>
                    {{ transaction.value(true) }}
                </td>

                <td>
                    {{ transaction.books|length }}
                </td>

                <td>
                    {{ transaction.transcription|raw }}
                </td>

                <td>
                    {{ transaction.description|raw }}
                </td>

            </tr>
        {% endfor %}
    </tbody>
</table>

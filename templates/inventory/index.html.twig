{% extends 'base.html.twig' %}

{% block title %}Inventory List{% endblock %}

{% block pageheader %}
    <h1>Inventory List</h1>
    <p class="count">
        Displaying {{ inventories|length }} inventories of {{ inventories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('inventory_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('inventory_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'inventory/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(inventories) }}
    </div>

{% endblock %}

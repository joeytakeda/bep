<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        <tr>
            <th>Title</th>
            <td>
                {{ book.title }}
            </td>
        </tr>
        <tr>
            <th>Uniform Title</th>
            <td>
                {{ book.uniformTitle }}
            </td>
        </tr>
        <tr>
            <th>Variant Titles</th>
            <td>
                {% for title in book.variantTitles %}
                    {{ title }}{% if not loop.last %}<br>{% endif %}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Author</th>
            <td>
                {{ book.author }}
            </td>
        </tr>
        <tr>
            <th>Publisher</th>
            <td>
                {{ book.publisher }}
            </td>
        </tr>
        <tr>
            <th>Date</th>
            <td>
                {{ book.date }}
            </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                {{ book.description|raw }}
            </td>
        </tr>

        <tr>
            <th>Format</th>
            <td>
                {% if book.format %}
                    <a href='{{ path("format_show", {"id": book.format.id}) }}'>{{ book.format }}</a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Transaction</th>
            <td>
                {% if book.transactions|length > 0 %}
                    <ul>
                        {% for transaction in book.transactions %}
                            <li>
                                <a href='{{ path("transaction_show", {"id":transaction.id }) }}'>
                                    {{ transaction }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Links</th>
            <td>
                {% embed '@NinesMedia/link/partial/list.html.twig' with {
                    'entity': book } %}
                {% endembed %}
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ book.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ book.updated|date }}</td>
        </tr>
    </tbody>
</table>



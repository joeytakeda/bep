<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Uniform Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {% for book in books %}
            <tr>
                <td>
                    <a href="{{ path('book_show', { 'id': book.id }) }}">
                        {{ book.title }}
                    </a>
                </td>
                <td>
                    {{ book.uniformTitle }}
                </td>

                <td>
                    {{ book.author }}
                </td>

                <td>
                    {{ book.publisher }}
                </td>

                <td>
                    {{ book.date }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

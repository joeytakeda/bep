{% extends 'base.html.twig' %}

{% block title %}Source Category List{% endblock %}

{% block pageheader %}
    <h1>Source Category List</h1>
    <p class="count">
        Displaying {{ source_categories|length }} source_categories of {{ source_categories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('source_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('source_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'source_category/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(source_categories) }}
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Town and London Ward List{% endblock %}

{% block pageheader %}
    <h1>Town and London Ward List</h1>
    <p class="count">
        Displaying {{ towns|length }} towns of {{ towns.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('town_new') }}" class="btn btn-default"> <span class="glyphicon glyphicon-plus"></span>
                    New </a>
            {% endif %}

            <a href="{{ path('town_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'town/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(towns) }}
    </div>

{% endblock %}

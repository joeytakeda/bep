{% extends 'base.html.twig' %}

{% block title %}Surviving Text List{% endblock %}

{% block pageheader %}
    <h1>Surviving Text List</h1>
    <p class="count">
        Displaying {{ holdings|length }} surviving texts of {{ holdings.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('holding_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
        </div>
    </div>

    {% embed 'holding/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(holdings) }}
    </div>

{% endblock %}
